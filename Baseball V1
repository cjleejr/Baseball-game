<!DOCTYPE html>
<html>
<head>
  <title>Color Hat Baseball Game</title>
  <style>
    canvas { background: #d0f0fd; display: block; margin: 0 auto; border: 2px solid #333; }
    body { font-family: sans-serif; text-align: center; }
  </style>
</head>
<body>
  <h1>Color Hat Baseball!</h1>
  <canvas id="gameCanvas" width="800" height="400"></canvas>
  <script src="game.js"></script>
</body>
</html>
const canvas = document.getElementById("gameCanvas");
const ctx = canvas.getContext("2d");

let bat = { x: 750, y: 200, width: 20, height: 80 };
let hats = []; // We'll add hats here!
let score = 0;

// Move bat with mouse
canvas.addEventListener("mousemove", (e) => {
  let canvasTop = canvas.getBoundingClientRect().top;
  bat.y = e.clientY - canvasTop - bat.height / 2;
});

// Draw bat
function drawBat() {
  ctx.fillStyle = "brown";
  ctx.fillRect(bat.x, bat.y, bat.width, bat.height);
}

// Game loop
function gameLoop() {
  ctx.clearRect(0, 0, canvas.width, canvas.height);
  drawBat();
  drawHats();
  moveHats();
  drawScore();
  requestAnimationFrame(gameLoop);
}

gameLoop();
function createHat() {
    const hatTypes = ["red", "yellow", "orange", "black"];
    let type = hatTypes[Math.floor(Math.random() * hatTypes.length)];
    
    let speedX, speedY;
  
    // Set speed and behavior by hat type
    if (type === "red") {
      speedX = 6;
      speedY = 0;
    } else if (type === "yellow") {
      speedX = 4;
      speedY = Math.random() * 4 - 2;
    } else if (type === "orange") {
      speedX = 6;
      speedY = Math.random() * 4 - 2;
    } else if (type === "black") {
      speedX = 20;
      speedY = 0;
    }
  
    hats.push({
      x: 0,
      y: Math.random() * (canvas.height - 20),
      radius: 15,
      color: type,
      speedX,
      speedY
    });
  }
  
  // Generate a hat every 1.5 seconds
  setInterval(createHat, 1500);
  function createHat() {
    const hatTypes = ["red", "yellow", "orange", "black"];
    let type = hatTypes[Math.floor(Math.random() * hatTypes.length)];
    
    let speedX, speedY;
  
    // Set speed and behavior by hat type
    if (type === "red") {
      speedX = 6;
      speedY = 0;
    } else if (type === "yellow") {
      speedX = 4;
      speedY = Math.random() * 4 - 2;
    } else if (type === "orange") {
      speedX = 6;
      speedY = Math.random() * 4 - 2;
    } else if (type === "black") {
      speedX = 20;
      speedY = 0;
    }
  
    hats.push({
      x: 0,
      y: Math.random() * (canvas.height - 20),
      radius: 15,
      color: type,
      speedX,
      speedY
    });
  }
  
  // Generate a hat every 1.5 seconds
  setInterval(createHat, 1500);
  function moveHats() {
    hats.forEach((hat, index) => {
      hat.x += hat.speedX;
      hat.y += hat.speedY;
  
      // Bounce yellow and orange off the top and bottom
      if ((hat.color === "yellow" || hat.color === "orange") &&
          (hat.y <= 0 || hat.y >= canvas.height)) {
        hat.speedY = -hat.speedY;
      }
  
      // Collision with bat
      if (hat.x + hat.radius > bat.x &&
          hat.y > bat.y &&
          hat.y < bat.y + bat.height) {
        score += 1;
        hats.splice(index, 1); // Remove hat
      }
  
      // Missed hat
      if (hat.x > canvas.width) {
        hats.splice(index, 1); // Remove it
      }
    });
  }
  function drawScore() {
    ctx.fillStyle = "#333";
    ctx.font = "20px sans-serif";
    ctx.fillText("Score: " + score, 20, 30);
  }
